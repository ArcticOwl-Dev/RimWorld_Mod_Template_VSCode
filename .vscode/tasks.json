{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "type": "shell",
      "command": "${workspaceFolder}/build/build_shell_selector.cmd",
      "args": [
        "build/build.ps1",
        "-Command",
        "Clean"
      ]
    },
    {
      "label": "_copyDependencies",
      "type": "shell",
      "command": "${workspaceFolder}/build/build_shell_selector.cmd",
      "args": [
        "build/build.ps1",
        "-Command",
        "CopyDependencies"
      ]
    },
    {
      "label": "_postbuild",
      "type": "shell",
      "command": "${workspaceFolder}/build/build_shell_selector.cmd",
      "args": [
        "build/build.ps1",
        "-Command",
        "PostBuild"
      ]
    },
    {
      "label": "build",
      "type": "shell",
      "command": "${workspaceFolder}/build/build_shell_selector.cmd",
      "args": [
        "build/build.ps1",
        "-Command",
        "Build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "start RimWorld",
      "type": "shell",
      "command": "${workspaceFolder}/build/build_shell_selector.cmd",
      "args": [
        "build/build.ps1",
        "-Command",
        "StartRimWorld"
      ]
    },
    {
      "label": "start RimWorld -quicktest",
      "type": "shell",
      "command": "${workspaceFolder}/build/build_shell_selector.cmd",
      "args": [
        "build/build.ps1",
        "-Command",
        "StartRimWorldQuickTest"
      ]
    },
    {
      "label": "install RimWorld debug",
      "type": "shell",
      "command": "${workspaceFolder}/build/build_shell_selector.cmd",
      "args": [
        "build/build_utility_debug.ps1",
        "-Command",
        "InstallRimWorldDebug"
      ]
    },
    {
      "label": "remove RimWorld debug",
      "type": "shell",
      "command": "${workspaceFolder}/build/build_shell_selector.cmd",
      "args": [
        "build/build_utility_debug.ps1",
        "-Command",
        "RemoveRimWorldDebug"
      ]
    },
    {
      "label": "start dnSPY",
      "type": "shell",
      "command": "${workspaceFolder}/build/build_shell_selector.cmd",
      "args": [
        "build/build.ps1",
        "-Command",
        "StartDNSPY"
      ]
    },
    {
      "label": "_change mod name",
      "type": "shell",
      "command": "${workspaceFolder}/build/build_shell_selector.cmd",
      "args": [
        "build/build.ps1",
        "-Command",
        "ChangeModName",
        "-NewModName",
        "${input:newModName}"
      ]
    }
  ],
  "inputs": [
    {
      "id": "newModName",
      "type": "promptString",
      "description": "Enter the new mod name (alphanumeric only, must not start with a number, no spaces or special characters)",
    }
  ]
}